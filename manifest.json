{
  "manifest_version": 3,
  "name": "ChatGPT & Gemini Question Navigator",
  "version": "0.2.0",
  "description": "在 ChatGPT/Gemini 页面侧边生成问题目录，点击跳转到历史提问。",
  "permissions": [],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://gemini.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
